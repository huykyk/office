import java.util.ArrayList;
/**
 * 归并排序
 * @author sinllychen
 *
 */
public class MergeSort {
	  /**
     * 归并排序 
     * @param datas
     * @param i
     * @param j
     */
    public static void mergeSort(ArrayList<Long> datas,int i,int j)
    {
    	int q;
    	if(i<j)
    	{
    	    q=(int) Math.floor((i+j)/2);
    	    mergeSort(datas,i,q);
    	    mergeSort(datas,q+1,j);
    	    merge(datas,i,q,j);
    	}
    }
    /**
     * 将两个子数组进行合并
     * @param datas
     * @param i  
     * @param q  
     * @param j
     */
    public static void merge(ArrayList<Long> datas,int i,int q,int j)
    {
    	int n1=q-i+1;
    	int n2=j-q;
    	long[] l=new long[n1+1];
    	long[] r=new long[n2+1];
    	int m,n;
    	for(m=0;m<n1;m++)
    		 l[m]=datas.get(i+m);
    	for(n=0;n<n2;n++)
    		r[n]=datas.get(q+1+n);
     l[n1]=2147483647;
     r[n2]=2147483647;
     m=0;n=0;
     for(int p=i;p<=j;p++)
     {
    	 if(l[m]<=r[n])
    	 {
    		 datas.set(p, l[m]);
    		 m++;
    	 }
    	 else 
    	 {
    		 datas.set(p, r[n]);
    		 n++;
    	 }
     }
    }
}
